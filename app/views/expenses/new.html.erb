<%= form_for(@expense) do |f| %>

  <div class="form-group">
    <%= f.label :amount %>
    <%= f.number_field :amount, class: "form-control", placeholder: "Amount" %>
  </div>
  <div class="form-group">
    <%= f.label :merchant_name %>
    <%= f.text_field :merchant_name, class: "form-control", placeholder: "Merchant Name" %>
  </div>
  <div class="form-group">
    <%= f.label :purchased_on %>
    <%= f.date_field :purchased_on, class: "form-control", placeholder: "Purchase Date" %>
  </div>
  <div class="form-group">
    <%= f.label :category %>
    <%= f.select("category", Expense::CATEGORIES, {include_blank: true}) %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, class: "form-control", placeholder: "Description" %>
  </div>
  <div class="form-group">
    <%= f.label :receipt %>
    <%= f.file_field :receipt %>
  </div>


  <button type="submit" class="btn btn-primary">Submit</button>


<% end %>